<div class="center">
  <div class="row">
    <% if (@listings.empty?) %>
      <h2>Unfortunately your request is not available</h2>
    <% else %>
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= "Rent From #{listing.user.name}" %></p>
            <p>only</p>
            <p><%= number_to_currency(listing.price) %> daily</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
</div>    

<%= link_to 'Back', listings_path, class: "btn btn-link" %>